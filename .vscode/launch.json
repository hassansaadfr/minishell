	"version": "0.2.0",
	"configurations": [
		{
			"type": "lldb",
			"request": "attach",
			"name": "attach",
			"program": "${workspaceFolder}/minishell",

		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "run",
			"program": "${workspaceFolder}/minishell",
			"preLaunchTask": "Build",
			"initCommands": [
				"settings set target.inherit-env false", // See the note below.
			],
			"env": {"TERM": "xterm-256color"}
		}
	]
}
